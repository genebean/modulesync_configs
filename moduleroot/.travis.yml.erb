language: ruby
cache: bundler

matrix:
  include:
    - rvm: 2.1.6
      env: PUPPET_VERSION="~> 3.0"
    - rvm: 2.1.6
      env: PUPPET_VERSION="~> 3.0" FUTURE_PARSER="yes"
    - rvm: 2.1.6
      env: PUPPET_VERSION="~> 4.0" STRICT_VARIABLES="yes"
    - rvm: 2.4.1
      env: PUPPET_VERSION="~> 5.0"

script: 'bundle exec rake tests'

notifications:
  email:
    on_failure: change
    on_success: never
<% if ! @configs['slack_rooms'].nil? -%>
  slack:
    rooms:
<% @configs['slack_rooms'].each do |room| -%>
      - secure: "<%= room %>"
<% end -%>
<% end -%>
